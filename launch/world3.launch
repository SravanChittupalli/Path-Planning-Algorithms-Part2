<?xml version="1.0" encoding="UTF-8"?>

<launch>  
  <arg name="robot" default="machines"/>
  <arg name="debug" default="false"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="pause" default="false"/>
  <arg name="world" default="world03" />
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find bug1and2_algorithm)/worlds/$(arg world).world"/>
    <arg name="debug" value="$(arg debug)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="$(arg pause)"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="headless" value="$(arg headless)"/>
    <!-- GAZEBO_MODEL_PATH must contain the path for the world description -->
    <env name="GAZEBO_MODEL_PATH" value="$(find bug1and2_algorithm)/worlds:$(optenv GAZEBO_MODEL_PATH)"/>
  </include>
<!--  Include launch.xml if needed -->
</launch>
